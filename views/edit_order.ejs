<%- include('partials/head.ejs') %>

<div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
  <div class="border rounded-lg mt-10 bg-white p-10">
    <div class="flex items-center justify-between gap-5 flex-wrap">
      <h2 class="font-medium text-lg">Edit Price List</h2>
    </div>

    <div class="mt-10">
      <form action="/edit-order/<%= messages?.id %>" method="post" class="space-y-6" action="#" method="POST">
        <div class="grid sm:grid-cols-2 gap-8">
          <div>
            <label
              for="customer"
              class="block text-sm font-medium leading-6 text-gray-900"
              >Select Customer</label
            >
            <div class="mt-2">
              <select
                id="customer"
                name="customer"
                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 outline-none px-4"
                onchange="getCustomerInfo(this)"
              >
              <option value="">Choose customer</option>

              <% if (customers) { %>
                
                <% customers?.forEach((customer, idx) => { %>
                  <option <%= customer?.id === messages?.customer[0] ? 'selected' : '' %> value="<%= customer?.id %>"><%= customer?.name %></option>

              <% }) } %>

              <% if (customers?.length === 0) { %>

                <option disabled value="">No Customer Found!!</option>

              <% } %>
            </select>
            </div>

            <% if (messages?.errors) { %>
              <p class="text-red-400 text-sm font-medium mt-4">
                <%= JSON.parse(messages?.errors)?.customer %>
              </p>
  
              <% } %>
          </div>

          <div>
            <label
              for="products"
              class="block text-sm font-medium leading-6 text-gray-900"
              >Select Products</label
            >
            <div class="mt-2">
              <select
                id="products"
                name="products"
                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 outline-none px-4"
                multiple
              >
              <option value="">Choose products</option>

              <% if (products) { %>
                <% products?.forEach((product, idx) => { %>

                  <option <%= messages?.products?.includes(product?.id) ? 'selected' : '' %> value="<%= product?.id %>"><%= product?.description %></option>

              <% }) } %>

              <% if (products?.length === 0) { %>

                <option disabled value="">No Product Found!!</option>

              <% } %>
            </select>
            </div>

            <% if (messages?.errors) { %>
            <p class="text-red-400 text-sm font-medium mt-4">
              <%= JSON.parse(messages?.errors)?.products %>
            </p>

            <% } %>
          </div>
  
          <div>
              <label
                for="Freight-Rate"
                class="block text-sm font-medium leading-6 text-gray-900"
                >Freight Rate</label
              >
            <div class="mt-2">
              <input
                id="Freight-Rate"
                name="freightRate"
                type="number"
                value="<%= messages?.freightRate %>"
                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 px-4 outline-none"
              />
            </div>

            <% if (messages?.errors) { %>
            <p class="text-red-400 text-sm font-medium mt-4">
              <%= JSON.parse(messages?.errors)?.freightRate %>
            </p>

            <% } %>
          </div>

          <div>
            <label
              for="commission-1"
              class="block text-sm font-medium leading-6 text-gray-900"
              >Commission 1</label
            >
          <div class="mt-2">
            <input
              id="commission-1"
              name="commission1"
              type="number"
              value="<%= messages?.commission1 %>"
              class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 px-4 outline-none"
            />
          </div>

          <% if (messages?.errors) { %>
          <p class="text-red-400 text-sm font-medium mt-4">
            <%= JSON.parse(messages?.errors)?.commission1 %>
          </p>

          <% } %>
        </div>

        
        <div>
          <label
            for="commission-2"
            class="block text-sm font-medium leading-6 text-gray-900"
            >Commission 2</label
          >
        <div class="mt-2">
          <input
            id="commission-2"
            name="commission2"
            type="number"
            value="<%= messages?.commission2 %>"
            class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 px-4 outline-none"
          />
        </div>

        <% if (messages?.errors) { %>
        <p class="text-red-400 text-sm font-medium mt-4">
          <%= JSON.parse(messages?.errors)?.commission2 %>
        </p>

        <% } %>
      </div>
  
          <div>
            <label
              for="mark-up"
              class="block text-sm font-medium leading-6 text-gray-900"
              >Mark Up</label
            >
            <div class="mt-2">
              <input
                id="mark-up"
                name="markUp"
                type="number"
                value="<%= messages?.markUp %>"
                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 px-4 outline-none"
              />
            </div>

            <% if (messages?.errors) { %>
            <p class="text-red-400 text-sm font-medium mt-4">
              <%= JSON.parse(messages?.errors)?.markUp %>
            </p>

            <% } %>
          </div>

          </div>

        <div>
          <button
            type="submit"
            class="flex justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
          >
            Update Price List
          </button>
        </div>
      </form>
    </div>
  </div>
  
</div>

</body>
</html>

<%- include('partials/foot.ejs') %>