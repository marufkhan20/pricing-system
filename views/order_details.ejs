<div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
  <div class="border rounded-lg mt-10 bg-white p-10">
    <h2 class="font-medium text-lg">Order Details</h2>
    <div class="mt-3 flex flex-col gap-4">
      <span>Name: <%= order?.name %></span>
    <span class="flex items-center gap-2">Date: 
      <div class="flex items-center">
        <span><%= new Date(order?.createdDate)?.getDate() %></span>
                <span>/</span>
                <span><%= new Date(order?.createdDate)?.getMonth() + 1 %></span>
                <span>/</span>
                <span><%= new Date(order?.createdDate)?.getFullYear() %></span>
      </div>
    </span>
    <div>
      <a href="/order/download/<%= order?.orderFileName %>" class="bg-green-400 text-center py-2 px-4 rounded-md text-white outline-none transition-all hover:bg-green-500 text-sm">Download Order File</a>
    </div>
    </div>
  </div>
</div>
   
